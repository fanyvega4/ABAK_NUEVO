@section Scripts {
    <script>
        const nextDom = document.getElementById('next');
        const prevDom = document.getElementById('prev');
        const listitemDom = document.querySelector('.carousel .list');
        const thumbnailDom = document.querySelector('.carousel .thumbnail');

        // scroll navbar
        window.addEventListener("scroll", () => {
          const navbar = document.querySelector(".navbar");
          navbar?.classList.toggle("scrolled", window.scrollY > 50);
        });

        let autoSlideInterval = setInterval(() => showSlider('next'), 10000);

        nextDom?.addEventListener('click', () => { showSlider('next'); resetAutoSlide(); });
        prevDom?.addEventListener('click', () => { showSlider('prev'); resetAutoSlide(true); });

        function showSlider(type) {
          const itemSlider = document.querySelectorAll('.carousel .list .itemc');
          const itemThumb  = document.querySelectorAll('.carousel .thumbnail .item');
          listitemDom.classList.add('transitioning');
          thumbnailDom.classList.add('transitioning');
          setTimeout(() => {
            if (type === 'next') { listitemDom.appendChild(itemSlider[0]); thumbnailDom.appendChild(itemThumb[0]); }
            else { listitemDom.insertBefore(itemSlider[itemSlider.length - 1], itemSlider[0]);
                   thumbnailDom.insertBefore(itemThumb[itemThumb.length - 1], itemThumb[0]); }
            listitemDom.classList.remove('transitioning');
            thumbnailDom.classList.remove('transitioning');
          }, 500);
        }

        function resetAutoSlide(isPrev) {
          clearInterval(autoSlideInterval);
          setTimeout(() => {
            autoSlideInterval = setInterval(() => showSlider('next'), 10000);
          }, isPrev ? 10000 : 0);
        }
    </script>
}
